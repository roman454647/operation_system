from multiprocessing import Pool
from decimal import  Decimal,localcontext
def func(x,step):
    result =Decimal(1)
    for i in range(1,step):
        znam=Decimal(1)
        chysel =Decimal(1)
        for j in range(1,i+1):
            if(j%2==0):
                znam = znam*Decimal(j)
            else:
                chysel =chysel*Decimal(j)
        if(znam!=0):
            result=result-(Decimal(x**(i)))*(Decimal(chysel/znam))
    return result

step= int(input())
x = float(input())


print(func(x,step))

